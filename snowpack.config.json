{
  "scripts": {
    "mount:_site": "mount src/_output --to /",
    "mount:js": "mount src/js --to /_dist_",
    "mount:web_modules": "mount web_modules",
    "build:css": "postcss",
    "run:11ty": "eleventy",
    "run:11ty::watch": "$1 --watch"
  },
  "plugins": ["@snowpack/plugin-parcel"],
  "installOptions": {
    "NODE_ENV": true
  },
  "devOptions": {
    "out": "dist"
  }
}
